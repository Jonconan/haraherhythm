<h2>アーティスト一覧</h2>
<ul class="artist-list">
  <% @artists.each do |artist| %>
    <%= link_to artist_path(artist_id: artist.id) do %>
      <li class="artist-card">
        <% if artist.thumbnail.attached? %>
          <%= image_tag url_for(artist.thumbnail), class: 'thumbnail' %>
        <% else %>
          <%= image_tag 'common/default.png', :size =>'320x320' %>
        <% end %>
        <div class="title"><%= artist.nickname %></div>
      </li>
    <% end %>
  <% end %>
</ul>


<!DOCTYPE html>
<html>
  <head>
    <title>Haraherhythm</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      header
    </header>
    <contents>
      <div class="sidebar">
        <% if current_artist.present? %>
          <%= link_to "ログアウト", artist_sign_out_path %>
        <% else %>
          <%= link_to "新規登録", new_artist_registration_path %>
          <%= link_to "ログイン", new_artist_session_path %>
        <% end %>
        sidebar menu
      </div>
      <div class="main">
        <%= yield %>
      </div>
    </contents>
    <footer>
      footer
    </footer>
  </body>
</html>

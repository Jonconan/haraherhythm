<div class="breadcrumb">
  <ul>
    <li class="before-page"><%= link_to 'トップ', root_path %></li>
    <li class="before-page"><%= link_to "#{current_artist.nickname}さんのマイページ", mypage_path %></li>
    <li class="before-page"><%= link_to '商品一覧', mypage_items_path %></li>
    <li><%= @item.name %>の情報を確認する</li>
  </ul>
</div>
<h2><%= @item.name %>の情報を確認する</h2>
<table class="mypage-live-settings">
  <tr>
    <th>
      アクション
      <div class="live-button left">
        <%= link_to item_path(life_id: @item.id), target: '_blank' do %>
          <i class="fas fa-shopping-bag"></i>ページを確認する
        <% end %>
      </div>
    </th>
    <td>
      <div class="edit-live">
        <div class="create-live-button">
          <%= link_to edit_mypage_item_path(id: @item.id) do %>
            <i class="fas fa-edit"></i>商品を編集する
          <% end %>
        </div>
      </div>
    </td>
  <tr>
    <th>商品</th>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <th>値段</th>
    <td><%= shop_format(@item.price) %></td>
  </tr>
  <tr>
    <th>商品の画像</th>
    <td>
      <% if @item.thumbnail.present? %>
        <%= image_tag url_for(@item.thumbnail.url), class: 'live-thumbnail-img' %>
      <% else %>
        <%= image_tag 'live.jpg', class: 'live-thumbnail-img' %>
      <% end %>
    </td>
  </tr>
  <tr>
    <th>商品説明</th>
    <td>
     写真　記念品　期間限定
    </td>
  </tr>
  <tr>
    <th>商品関係者</th>
    <td class="live-join-artists">
      <ul class="artist-list">
        <li class="artist-card">
          <% if @item.artist.thumbnail.present? %>
            <%= image_tag url_for(@item.artist.thumbnail.url), class: 'thumbnail' %>
          <% else %>
            <%= image_tag 'common/default.png', class: 'thumbnail' %>
          <% end %>
        </li>
      </ul>
    </td>
  </tr>
  <tr>
    <th>発送方法</th>
    <td><%= @item.sales_format %></td>
  </tr>
  <% unless @item.sales_format_id == 2 %>
    <tr>
      <th>注文から発送までの日数目安</th>
      <td><%= @item.delivery_days %>日</td>
    </tr>
  <% end %>
</table>

<div class="breadcrumb">
  <ul>
    <li class="before-page"><%= link_to 'トップ', root_path %></li>
    <li class="before-page"><%= link_to "#{current_artist.nickname}さんのマイページ", mypage_path %></li>
    <li class="before-page"><%= link_to 'ライブ情報', mypage_lives_path %></li>
    <li>ライブ編集</li>
  </ul>
</div>
<h2>ライブ編集</h2>
<div class="new-live">
  <%= form_with url: mypage_life_path(id: @live.id), method: :patch do |f| %>
    <table class="new-artists">
      <tr>
        <th class="require">ライブ名</th>
        <td><%= f.text_field :title, value: @live.title %></td>
      </tr>
      <tr>
        <th>ライブの紹介文</th>
        <td><%= f.text_area :description, value: @live.description %></td>
      </tr>
      <tr>
        <th>ライブ画像アップロード</th>
        <td><%= f.file_field :thumbnail %></td>
      </tr>
      <tr>
        <th class="require">開催日</th>
        <td><%= f.date_field :date, value: @live.date %></td>
      </tr>
      <tr>
        <th class="require">ライブ会場情報</th>
        <td><%= f.text_field :venue, value: @live.venue %></td>
      </tr>
      <tr>
        <th>WebサイトのURL</th>
        <td><%= f.text_field :website_url, value: @live.website_url %></td>
      </tr>
    </table>

    <div class="actions">
      <%= f.submit "更新" %>
    </div>
  <% end %>
</div>

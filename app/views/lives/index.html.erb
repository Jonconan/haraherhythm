<div class="breadcrumb">
  <ul>
    <li class="before-page"><%= link_to 'トップ', root_path %></li>
    <li><%= @live.title %></li>
  </ul>
</div>
<h2><%= @live.title %></h2>
<div class="live-contents">
  <div class="live-thumbnail">
    <% if @live.thumbnail.attached? %>
      <%= image_tag url_for(@live.thumbnail), class: 'thumbnail' %>
    <% else %>
      <%= image_tag 'live.jpg', class: 'thumbnail' %>
    <% end %>

    <ul class="artist-list">
      <% @live.artists.each do |artist| %>
        <%= link_to artist_path(artist_id: artist.id) do %>
        <li class="artist-card">
          <% if artist.thumbnail.attached? %>
            <%= image_tag url_for(artist.thumbnail), class: 'thumbnail' %>
          <% else %>
            <%= image_tag 'common/default.png', class: 'thumbnail' %>
          <% end %>
          <div class="title"><%= artist.nickname %></div>
        </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>


<h2>物販一覧</h2>

<div class="product-sales">
  <ul class="item-list">
    <%= render partial: 'common/item_cards' %>
  </ul>
</div>
